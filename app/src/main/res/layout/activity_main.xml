<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/calculatorBackground"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/solution_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/result_tv"
        android:layout_marginStart="14dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="14dp"
        android:textAlignment="textEnd"
        android:textColor="@color/calculatorText"
        android:textSize="32dp" />

    <TextView
        android:id="@+id/result_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/buttons_layout"
        android:layout_marginStart="14dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="14dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textColor="@color/calculatorText"
        android:textSize="64dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:background="@color/calculatorBackground"
        android:paddingVertical="14dp"
        android:id="@+id/buttons_layout">

        <!-- Dòng 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:layout_width="84dp"
                android:layout_height="84dp"
                app:cornerRadius="4dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="32dp"
                android:textColor="@color/calculatorButtonTextColor"
                android:layout_margin="4dp"
                android:id="@+id/button_ac"
                android:backgroundTint="@color/calculatorButtonBackground"
                android:text="AC" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="84dp"
                android:layout_height="84dp"
                app:cornerRadius="4dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="32dp"
                android:textColor="@color/calculatorButtonTextColor"
                android:layout_margin="4dp"
                android:id="@+id/button_c"
                android:backgroundTint="@color/calculatorButtonBackground"
                android:text="C" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="84dp"
                android:layout_height="84dp"
                app:cornerRadius="4dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="32dp"
                android:textColor="@color/calculatorButtonTextColor"
                android:layout_margin="4dp"
                android:id="@+id/button_percent"
                android:backgroundTint="@color/calculatorButtonBackground"
                android:text="%" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="84dp"
                android:layout_height="84dp"
                app:cornerRadius="4dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="32dp"
                android:textColor="@color/calculatorButtonTextColor"
                android:layout_margin="4dp"
                android:id="@+id/button_divide"
                android:backgroundTint="@color/calculatorButtonOperatorBackground"
                android:text="/" />

        </LinearLayout>

        <!-- Dòng 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:layout_width="84dp"
                android:layout_height="84dp"
                app:cornerRadius="4dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="32dp"
                android:textColor="@color/calculatorButtonTextColor"
                android:layout_margin="4dp"
                android:id="@+id/button_7"
                android:backgroundTint="@color/calculatorButtonBackground"
                android:text="7" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="84dp"
                android:layout_height="84dp"
                app:cornerRadius="4dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="32dp"
                android:textColor="@color/calculatorButtonTextColor"
                android:layout_margin="4dp"
                android:id="@+id/button_8"
                android:backgroundTint="@color/calculatorButtonBackground"
                android:text="8" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="84dp"
                android:layout_height="84dp"
                app:cornerRadius="4dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="32dp"
                android:textColor="@color/calculatorButtonTextColor"
                android:layout_margin="4dp"
                android:id="@+id/button_9"
                android:backgroundTint="@color/calculatorButtonBackground"
                android:text="9" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="84dp"
                android:layout_height="84dp"
                app:cornerRadius="4dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="20dp"
                android:textColor="@color/calculatorButtonTextColor"
                android:layout_margin="4dp"
                android:id="@+id/button_multiply"
                android:backgroundTint="@color/calculatorButtonOperatorBackground"
                android:text="x" />

        </LinearLayout>

        <!-- Dòng 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:layout_width="84dp"
                android:layout_height="84dp"
                app:cornerRadius="4dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="32dp"
                android:textColor="@color/calculatorButtonTextColor"
                android:layout_margin="4dp"
                android:id="@+id/button_4"
                android:backgroundTint="@color/calculatorButtonBackground"
                android:text="4" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="84dp"
                android:layout_height="84dp"
                app:cornerRadius="4dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="32dp"
                android:textColor="@color/calculatorButtonTextColor"
                android:layout_margin="4dp"
                android:id="@+id/button_5"
                android:backgroundTint="@color/calculatorButtonBackground"
                android:text="5" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="84dp"
                android:layout_height="84dp"
                app:cornerRadius="4dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="32dp"
                android:textColor="@color/calculatorButtonTextColor"
                android:layout_margin="4dp"
                android:id="@+id/button_6"
                android:backgroundTint="@color/calculatorButtonBackground"
                android:text="6" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="84dp"
                android:layout_height="84dp"
                app:cornerRadius="4dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="34dp"
                android:textColor="@color/calculatorButtonTextColor"
                android:layout_margin="4dp"
                android:id="@+id/button_minus"
                android:backgroundTint="@color/calculatorButtonOperatorBackground"
                android:text="-" />

        </LinearLayout>

        <!-- Dòng 4 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:layout_width="84dp"
                android:layout_height="84dp"
                app:cornerRadius="4dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="32dp"
                android:textColor="@color/calculatorButtonTextColor"
                android:layout_margin="4dp"
                android:id="@+id/button_1"
                android:backgroundTint="@color/calculatorButtonBackground"
                android:text="1" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="84dp"
                android:layout_height="84dp"
                app:cornerRadius="4dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="32dp"
                android:textColor="@color/calculatorButtonTextColor"
                android:layout_margin="4dp"
                android:id="@+id/button_2"
                android:backgroundTint="@color/calculatorButtonBackground"
                android:text="2" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="84dp"
                android:layout_height="84dp"
                app:cornerRadius="4dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="32dp"
                android:textColor="@color/calculatorButtonTextColor"
                android:layout_margin="4dp"
                android:id="@+id/button_3"
                android:backgroundTint="@color/calculatorButtonBackground"
                android:text="3" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="84dp"
                android:layout_height="84dp"
                app:cornerRadius="4dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="24dp"
                android:textColor="@color/calculatorButtonTextColor"
                android:layout_margin="4dp"
                android:id="@+id/button_plus"
                android:backgroundTint="@color/calculatorButtonOperatorBackground"
                android:text="+" />

        </LinearLayout>

        <!-- Dòng 5 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:layout_width="84dp"
                android:layout_height="84dp"
                app:cornerRadius="4dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="32dp"
                android:textColor="@color/calculatorButtonTextColor"
                android:layout_margin="4dp"
                android:id="@+id/button_0"
                android:backgroundTint="@color/calculatorButtonBackground"
                android:text="0" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="84dp"
                android:layout_height="84dp"
                app:cornerRadius="4dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="32dp"
                android:textColor="@color/calculatorButtonTextColor"
                android:layout_margin="4dp"
                android:id="@+id/button_dot"
                android:backgroundTint="@color/calculatorButtonBackground"
                android:text="." />

            <com.google.android.material.button.MaterialButton
                android:layout_width="174dp"
                android:layout_height="84dp"
                app:cornerRadius="4dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="32dp"
                android:textColor="@color/calculatorButtonTextColor"
                android:layout_margin="4dp"
                android:id="@+id/button_equals"
                android:backgroundTint="@color/calculatorButtonOperatorBackground"
                android:text="=" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>